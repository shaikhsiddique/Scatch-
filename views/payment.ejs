<%- include('./partials/header') %>

<div class="container mx-auto px-4 py-4">
    <div class="bg-white p-6 rounded-lg shadow-lg">
        <h2 class="text-2xl font-semibold mb-4 text-center">Select Payment Method</h2>

        <div class="text-center mb-4">
            <p class="text-lg">Amount to Pay: <span class="font-bold"><%= amount %></span></p>
        </div>

        <form action="/users/orders" method="get">
            <input type="hidden" value="<%= amount %>" name="amount" class="net-total-price">
            <div class="flex flex-wrap gap-4 justify-center mb-4">
                <!-- QR Code Scanner -->
                <div class="w-full md:w-1/3 p-3 bg-gray-50 rounded-lg shadow-sm">
                    <h3 class="text-xl font-semibold mb-2 text-center">Scan QR Code</h3>
                    <div class="flex justify-center items-center h-32 bg-gray-200 rounded-lg">
                        <img src="https://via.placeholder.com/150" alt="QR Code" class="w-24 h-24">
                    </div>
                    <button type="submit" class="mt-3 w-full bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">Pay with QR</button>
                </div>

                <!-- Net Banking -->
                <div class="w-full md:w-1/3 p-3 bg-gray-50 rounded-lg shadow-sm">
                    <h3 class="text-xl font-semibold mb-2 text-center">Net Banking</h3>
                    <select class="w-full p-2 border rounded-lg mb-3">
                        <option>Select Bank</option>
                        <option>Bank 1</option>
                        <option>Bank 2</option>
                        <option>Bank 3</option>
                    </select>
                    <button type="submit" class="w-full bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">Pay with Net Banking</button>
                </div>

                <!-- Credit/Debit Card -->
                <div class="w-full md:w-1/3 p-3 bg-gray-50 rounded-lg shadow-sm">
                    <h3 class="text-xl font-semibold mb-2 text-center">Credit/Debit Card</h3>
                    <input type="text" placeholder="Card Number" class="w-full p-2 border rounded-lg mb-2">
                    <div class="flex gap-2 mb-2">
                        <input type="text" placeholder="MM/YY" class="w-1/2 p-2 border rounded-lg">
                        <input type="text" placeholder="CVV" class="w-1/2 p-2 border rounded-lg">
                    </div>
                    <button type="submit" class="w-full bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">Pay with Card</button>
                </div>
            </div>

            <div class="flex justify-center">
                <button type="submit" class="mt-3 bg-green-500 text-white px-6 py-3 rounded-lg hover:bg-green-600">Proceed to Order</button>
            </div>
        </form>
    </div>
</div>

<%- include('./partials/footer') %>
