<%- include('./partials/header') %>

<div class="px-20 py-20">
  <% 
    let productCount = products.length;
  %>

  <% products.map((product, index) => { %>
    <div class="w-full h-auto flex items-start gap-10 mt-10 mb-20">

      <div class="w-[30%] rounded-md overflow-hidden shadow-lg">
        <div class="w-full h-80 overflow-hidden rounded-lg">
          <img class="object-cover w-full h-full" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>"/>
        </div>

        <div class="px-5 py-4">
          <div class="w-full flex justify-between mb-4">
            <h3 class="text-2xl"><%= product.name %></h3>
            <div class="flex items-center gap-2">
              <i id="add-<%= index %>" class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
              <div class="px-2 py-1 rounded-md bg-white text-black" id="productCount-<%= index %>">1</div>
              <i id="sub-<%= index %>" class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
            </div>
          </div>
          <h4 class="text-xl"><%= product.description %></h4>
        </div>
      </div>

      <div class="w-[70%]">
        <h3 class="text-xl mb-4">Price Breakdown</h3>
        <div class="px-10">
          <div class="flex mt-2">
            <h4 class="w-1/3">Total MRP</h4>
            <h4>₹ <%= product.price %></h4>
          </div>
          <div class="flex mt-2">
            <h4 class="w-1/3">Discount on MRP</h4>
            <h4>₹ <%= product.discount %></h4>
          </div>
          <div class="flex mt-2">
            <h4 class="w-1/3">Platform Fee</h4>
            <h4>₹ 20</h4>
          </div>
          <div class="flex mt-2">
            <h4 class="w-1/3">Shipping Fee</h4>
            <h4>FREE</h4>
          </div>
        </div>
        <div class="w-full h-[1px] bg-black my-4"></div>
        <div class="flex mt-5">
          <form action="/order" method="POST" class="flex items-center justify-between w-full">
            <input type="hidden" name="totalAmount" value="<%= product.discount + 20 %>" />
            <h3 class="w-1/3 text-xl">Total Amount</h3>
            <h3 class="font-semibold text-xl text-green-600" id="total-price-<%= index %>">₹ <%= product.discount + 20 %></h3>
            <input type="text" value="<%= product.discount %>" class="hidden" id="price-<%= index %>">
            <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded-md">Place Order</button>
          </form>
        </div>
      </div>
    </div>
  <% }) %>

  <div class="flex items-center justify-between px-5 py-3">
    <h4 class="text-lg" id="net-total">Net Total: ₹ 0</h4>
    <h2 class="text-lg" id="product-count">Total products: <%= productCount %></h2>
  </div>
</div>
<script src="/javascript/cart-script.js"></script>
<%- include('./partials/footer') %>
